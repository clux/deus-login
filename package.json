{
  "name": "deus-login",
  "description": "Deus Ex Login component",
  "private": true,
  "author": "Eirik Albrigtsen <analsandblaster@gmail.com>",
  "version": "0.1.1",
  "repository": {
    "type": "git",
    "url": "clux/deus-login"
  },
  "scripts": {
    "build": "make js css html",
    "watch": "watch-run -p 'deus.+(html|stylus)' make css html",
    "bsync": "browser-sync start --server --files deus.build.html index.html",
    "develop": "parallelshell 'npm run watch' 'npm run bsync'",
    "pretestling": "make js css html",
    "testling": "testling -x google-chrome",
    "release": "make release"
  },
  "devDependencies": {
    "autoprefixer-stylus": "^0.7.0",
    "parallelshell": "^1.1.1",
    "stylus": "^0.51.1",
    "tape": "^4.0.0",
    "vulcanize": "^1.9.1",
    "watch-run": "^1.2.2"
  },
  "testling": {
    "html": "test/deus.test.html"
  }
}
